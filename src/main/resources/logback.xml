<configuration>

    <appender name="ATOMIKOS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>transaction.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>transaction%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - User: %X{user} | TransactionId: %X{transactionId} | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.atomikos" level="DEBUG">
        <appender-ref ref="ATOMIKOS" />
    </logger>

    <logger name="org.springframework.transaction.jta" level="DEBUG">
        <appender-ref ref="ATOMIKOS" />
    </logger>

</configuration>
