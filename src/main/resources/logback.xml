<configuration>

    <appender name="ATOMIKOS" class="ch.qos.logback.core.FileAppender">
        <file>transaction.log</file>
        <append>true</append>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-4relative [%thread] %-5level %logger{35} - User: %X{user} | TransactionId: %X{transactionId} | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.atomikos" level="DEBUG">
        <appender-ref ref="ATOMIKOS" />
    </logger>

    <logger name="org.springframework.transaction.jta" level="DEBUG">
        <appender-ref ref="ATOMIKOS" />
    </logger>

</configuration>
